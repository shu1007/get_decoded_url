{
  "name": "GetDecodedUrl",
  "author": "Imamu",
  "description": "alt + shift + c で開いているページのURLをデコードしてクリップボードにコピーします。",
  "version": "0.0.4",
  "manifest_version": 2,
  "permissions": ["activeTab"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "commands": {
    "copy_decoded_uri": {
      "suggested_key": {
        "windows": "Alt+Shift+C",
        "mac": "Alt+Shift+C"
      },
      "description": "Copy URI without encoding"
    }
  }
}
